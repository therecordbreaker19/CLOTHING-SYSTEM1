<%= image_tag("profile.png", alt: "Profile", class: "micropost-profile-image",  size: "50x50") %>
<li>

  <%= link_to user.name, user %>
  <p>
    <%= pluralize(user.microposts.count, "micropost") %>
  </p>
  <% if user.admin? %>
    <span>
      <strong>Administrator</strong>
    </span>
  <%end%>
  <% if current_user.admin? && !current_user?(user) %>
    ||
    <%= link_to "delete", user, method: :delete, data: { confirm: "Sure you want to delete user [ #{user.name} ]" } %>
  <% end %>
</li>
